<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".SignUpActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splah_bg" />

    <fontsmaterialuiux.Raleway_Bold_TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="@string/material_uiux"
        android:textColor="@color/colorDarkBlue"
        android:textSize="40sp" />


    <LinearLayout
        android:id="@+id/id_signIn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/id_user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_user" />

            <fontsmaterialuiux.Raleway_Regular_EditText
                android:id="@+id/id_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toEndOf="@+id/id_user_image"
                android:layout_toRightOf="@+id/id_user_image"
                android:backgroundTint="@color/thirdTextColor"
                android:hint="Username"
                android:paddingTop="1dp"
                android:paddingBottom="16dp"
                android:textColorHint="@color/thirdTextColor" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp">

            <ImageView
                android:id="@+id/id_email_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_email" />

            <fontsmaterialuiux.Raleway_Regular_EditText
                android:id="@+id/id_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toEndOf="@+id/id_email_image"
                android:layout_toRightOf="@+id/id_email_image"
                android:backgroundTint="@color/thirdTextColor"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingTop="1dp"
                android:paddingBottom="16dp"
                android:textColorHint="@color/thirdTextColor" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp">

            <ImageView
                android:id="@+id/id_password_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_password" />

            <fontsmaterialuiux.Raleway_Regular_EditText
                android:id="@+id/id_user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toEndOf="@+id/id_password_image"
                android:layout_toRightOf="@+id/id_password_image"
                android:backgroundTint="@color/thirdTextColor"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingTop="1dp"
                android:paddingBottom="16dp"
                android:textColorHint="@color/thirdTextColor" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20sp"
                android:src="@drawable/ic_eye"
                android:layout_marginEnd="20sp" />
        </RelativeLayout>


        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/background_button"
            android:text="Sign Up"
            android:textColor="@color/fourdTextColor" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_signIn_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="33dp">

            <fontsmaterialuiux.Raleway_Regular_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Already have an account ? "
                android:textColor="@color/fourdTextColor"
                android:textSize="18sp" />

            <fontsmaterialuiux.Raleway_Regular_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" Sign in"
                android:textColor="@color/secondaryTextColor"
                android:textSize="18sp" />


        </LinearLayout>

        <ImageView
            android:layout_width="340dp"
            android:layout_height="5dp"
            android:layerType="software"
            android:src="@drawable/dotted" />

    </LinearLayout>
</RelativeLayout>