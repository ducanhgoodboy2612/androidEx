<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DangKy">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#1B97FA"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SĐT/Email:"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:paddingLeft="10dp"
        />
    <EditText
        android:id="@+id/idTaiKhoanDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập SĐT/Email"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#0B0B0B"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:paddingLeft="10dp"
        />
    <EditText
        android:id="@+id/idMatKhauDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mật khẩu"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#0B0B0B"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã OTP (gửi về DT/Email)"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:paddingLeft="10dp"
        />
    <EditText
        android:id="@+id/idMaOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="******"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#0B0B0B"
        android:paddingLeft="10dp"/>

    <Button
        android:id="@+id/idDangKy"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:backgroundTint="#2196F3"
        android:layout_gravity="center"
        android:onClick="onclickdangky"
        />

    <Button
        android:id="@+id/btnBackDK"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Trở về"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#fff"/>
</LinearLayout>