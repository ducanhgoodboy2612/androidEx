<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/brandpic"/>
    <TextView
        android:id="@+id/tvTongHD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng hóa đơn"
        android:textSize="20dp"

        android:textColor="#F44336"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#B9E488"
        android:weightSum="10">
        <TextView
            android:id="@+id/textViewTen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="18sp"
            android:layout_marginTop="7dp"
            android:text="Mã HĐ"/>

        <TextView
            android:id="@+id/textViewGia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="16sp"
            android:layout_marginTop="7dp"
            android:text="Tên món"/>

        <TextView
            android:id="@+id/textViewSLBan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="16sp"
            android:layout_marginTop="7dp"
            android:text="Số lượng"/>
    </LinearLayout>

    <ListView
        android:id="@+id/list_cthd"
        android:divider="#82C03A"
        android:dividerHeight="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnAddCTHD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="THÊM"/>


</LinearLayout>