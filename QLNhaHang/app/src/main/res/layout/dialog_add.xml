<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3E0E8">

    <TextView
        android:id="@+id/txtAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THÊM CÔNG VIỆC"
        android:textSize="30sp"
        android:textColor="#39AC3E"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/edtAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAdd"
        android:hint="Them cong viec"
        android:textSize="22sp"
        android:padding="15dp"/>
    <Button
        android:id="@+id/btnAdd"
        android:layout_below="@+id/edtAdd"
        android:textSize="16sp"
        android:text="Add"
        android:layout_marginLeft="30dp"
        android:background="#91DA64"
        android:layout_width="80dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnCancel"
        android:layout_below="@+id/edtAdd"
        android:layout_toRightOf="@+id/btnAdd"
        android:textSize="16sp"
        android:text="Cancel"
        android:layout_marginLeft="60dp"
        android:background="#91DA64"
        android:layout_width="80dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>