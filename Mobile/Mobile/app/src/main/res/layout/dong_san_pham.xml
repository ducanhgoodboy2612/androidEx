<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp">

    <ImageView
        android:id="@+id/ImageViewHinh"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:onClick="onclickChiTietSanPham"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textViewTen"
        android:layout_toRightOf="@id/ImageViewHinh"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tên SP"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#F50606"/>
    <TextView
        android:id="@+id/textViewGia"
        android:layout_toRightOf="@id/ImageViewHinh"
        android:layout_below="@id/textViewTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"/>
    <ImageView
        android:id="@+id/ImageViewMua"
        android:layout_toRightOf="@id/textViewTen"
        android:onClick="onclickMuaSanPham"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp"/>
</RelativeLayout>