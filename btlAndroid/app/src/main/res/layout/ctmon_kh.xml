<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/topbanner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/brandpic"/>
    <!--    <TextView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="Chi tiết sản phẩm"-->
    <!--        android:textSize="30sp"-->
    <!--        android:textStyle="bold"-->
    <!--        android:textColor="#ffffff"-->
    <!--        android:layout_gravity="center_horizontal"-->
    <!--        android:gravity="center"-->
    <!--        android:paddingTop="20dp"-->
    <!--        android:layout_marginTop="100dp"-->
    <!--        android:background="#03A9F4"-->
    <!--        />-->

    <ImageView
        android:id="@+id/product_image1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/topbanner"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/bigmac_bb" />

    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Burger BIG MAC bò"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/topbanner"
        android:layout_toEndOf="@id/product_image1"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="59.000đ"
        android:textColor="#FF0000"
        android:textSize="18sp"
        android:layout_below="@id/product_title"
        android:layout_toEndOf="@id/product_image1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/decrease_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="-"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/product_price"
        android:layout_toEndOf="@id/product_image1"/>

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20sp"
        android:layout_below="@id/product_price"
        android:layout_toEndOf="@id/decrease_button"
        android:layout_alignBaseline="@id/decrease_button"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/increase_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:layout_toEndOf="@id/quantity_text_view"
        android:layout_below="@id/product_price"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/add_to_cart_button"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/increase_button"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/product_image1"
        android:onClick="onclickMuaSP"
        android:backgroundTint="#EA0C0C"
        android:textColor="#ffffff"
        android:text="Mua ngay" />
    <TextView
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đắm chìm trong hương vị đặc trưng của burger Big Mac từ McDonald's! Hai lớp thịt bò thơm ngon, phô-mai béo ngậy, rau xanh tươi và sốt Big Mac độc đáo làm nên bí quyết của một chiếc burger không thể quên. Mỗi miếng nhấm nháp là một trải nghiệm đích thực về ẩm thực tuyệt vời chỉ có tại McDonald's."
        android:textSize="16sp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/add_to_cart_button" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:src="@drawable/bottom_banner"
        android:layout_marginTop="500dp"/>
</RelativeLayout>