<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hệ số A:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0888ED" />
        <EditText
            android:id="@+id/HeSoA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập hệ số A"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hệ số B:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0888ED" />
        <EditText
            android:id="@+id/HeSoB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập hệ số B"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hệ số C:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0888ED" />
        <EditText
            android:id="@+id/HeSoC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập hệ số C"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="200dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:weightSum="2">


        <Button
            android:id="@+id/btnTong"
            android:background="#32E615"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TỔNG"
            android:layout_weight="1"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/btnTich"
            android:background="#3881CB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TICH"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0888ED" />
</LinearLayout>