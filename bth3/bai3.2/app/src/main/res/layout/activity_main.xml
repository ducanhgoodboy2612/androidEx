<?xml version="1.0" encoding="utf-8"?>
<LinearLayout class="androidx.appcompat.app.AlertController$RecycleListView" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:textSize="26sp"
        android:gravity="center"
        android:textColor="#FFE500"
        android:textStyle="bold"
        android:background="#C800AF07"
        />

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="0px"
            android:layout_y="0px"
            android:paddingTop="10px"
            android:text="Họ tên:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edthoten"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_x="71dp"
            android:layout_y="0dp"
            />
    </AbsoluteLayout>

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="0px"
            android:layout_y="0px"
            android:paddingTop="10px"
            android:text="CMND:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtcmt"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_x="71dp"
            android:layout_y="0dp" />
    </AbsoluteLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bằng cấp"
        android:background="#008EFF"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#FFE500"
        android:textStyle="bold"/>
    <RadioGroup
        android:id="@+id/rgbc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">
    <RadioButton
        android:id="@+id/rbtc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="20dp"
        android:text="Trung cấp"
        android:background="#FFFFFF"/>
    <RadioButton
        android:id="@+id/rbcd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:text="Cao đẳng"
        android:background="#FFFFFF"/>
    <RadioButton
        android:id="@+id/rbdh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:text="Đại học"
        android:background="#FFFFFF"/>
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sở thích"
        android:background="#008EFF"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#FFE500"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cbdb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:text="Đọc báo"
            android:background="#FFFFFF"/>
        <CheckBox
            android:id="@+id/cbds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:text="Đọc sách"
            android:background="#FFFFFF"/>
        <CheckBox
            android:id="@+id/cbdc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:text="Đọc coding"
            android:background="#FFFFFF"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin bổ sung"
        android:background="#008EFF"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#FFE500"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khoa CNTT - UTEHY"
        android:layout_marginTop="30px"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edbm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi thông tin"
        android:layout_gravity="center"
        android:onClick="clickok"
        />



</LinearLayout>