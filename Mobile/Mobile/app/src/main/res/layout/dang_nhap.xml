<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DangNhap">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#1B97FA"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số điện thoại/Email"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        />

    <EditText
        android:id="@+id/idTaiKhoanDN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số điện thoại hoặc email"
        android:paddingLeft="10dp"
        android:textColor="#0B0B0B"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:paddingLeft="10dp"
        />
    <EditText
        android:id="@+id/idMatKhauDN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mật khẩu"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#0B0B0B"
        android:paddingLeft="10dp"/>

    <Button
        android:id="@+id/idDangNhap"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#2196F3"
        android:text="Đăng nhập"
        android:textColor="#fff"
        android:textSize="25sp"
        android:textStyle="bold"
        android:onClick="onclickdangnhap"/>

    <Button
        android:id="@+id/btnBackDN"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Trở về"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#fff"/>

</LinearLayout>