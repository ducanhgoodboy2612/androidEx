<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFEECE">

    <TextView
        android:id="@+id/txtAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CẬP NHẬT MENU"
        android:textSize="30sp"
        android:textColor="#D75B34"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/edtTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAdd"
        android:hint="Tên món"
        android:textSize="22sp"
        android:padding="15dp"/>
    <EditText
        android:id="@+id/edtGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTen"
        android:hint="Đơn giá"
        android:textSize="22sp"
        android:padding="15dp"/>


    <Button
        android:id="@+id/btnEdit"
        android:layout_below="@+id/edtGia"
        android:textSize="16sp"
        android:text="Cập nhật"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:background="#91DA64"
        android:layout_width="85dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnCancelEdit"
        android:layout_below="@+id/edtGia"
        android:layout_toRightOf="@+id/btnEdit"
        android:textSize="16sp"
        android:text="Cancel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:background="#91DA64"
        android:layout_width="85dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>